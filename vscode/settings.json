{
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "cSpell.enabledLanguageIds": ["markdown", "plaintext", "text"],
  "cSpell.language": "en-GB",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "SauceCodePro Nerd Font Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.countBadge": "off",
  "go.formatTool": "goimports",
  "go.lintFlags": ["--allow-parallel-runners"],
  "go.lintTool": "golangci-lint",
  "javascript.format.semicolons": "insert",
  "redhat.telemetry.enabled": false,
  "todohighlight.defaultStyle": {
    "backgroundColor": "#ff006e",
    "borderRadius": "3px",
    "color": "#fff"
  },
  "todohighlight.include": [
    "**/*.go",
    "**/*.md",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss"
  ],
  "todohighlight.keywords": ["TODO", "todo-", "FIXME", "BUG"],
  "window.newWindowDimensions": "maximized",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none"
}
