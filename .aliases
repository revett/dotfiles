#!/usr/bin/env bash
#
# Aliases
#
# @author Charlie Revett

# Dates
alias week='date +%V'
alias sprint='date +%V'

# Directories
alias ~='cd $HOME'
alias dl='cd ~/Downloads'
alias dotfiles='cd ~/dotfiles'
alias dt="cd ~/Desktop"
alias p='cd ~/projects'
alias rev='cd ~/projects/github.com/revett'
alias work='cd ~/projects/github.com/vidsy'

# Docker
alias container-node='CONTAINER_PORT=$(find-free-port); echo http://localhost:$CONTAINER_PORT; docker run --rm -it -p $CONTAINER_PORT:80 -v $PWD:/home/app -w /home/app -u node node:16.13.0 bash'

# General
alias reload='source ~/.zshrc'

# Git
alias ggpull='git pull origin $(branch)'
alias ggpush='git push origin $(branch)'

# Network
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias localip='ifconfig -l | xargs -n1 ipconfig getifaddr'

# Set BSD ls to use coreutils gls
# https://github.com/sharkdp/vivid#on-macos
alias ls='gls --color'
